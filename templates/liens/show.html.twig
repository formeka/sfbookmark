{% extends 'base.html.twig' %}

{% block title %}Liens{% endblock %}

{% block body %}
    <h1>Liens</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ lien.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ lien.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ lien.description }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ lien.createdAt ? lien.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ModifiedAt</th>
                <td>{{ lien.modifiedAt ? lien.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ lien.url }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_liens_index') }}">back to list</a>

    <a href="{{ path('app_liens_edit', {'id': lien.id}) }}">edit</a>

    {{ include('liens/_delete_form.html.twig') }}
